<div id="container">
  <% @title="Of The Week" %>
  <h1>Find the best photo of the week for any subject</h1>
  
  <h2>Popular Photos This Week</h2>
  
  <% @popular.each_with_index do |photo, index| %>
    <% if index % 6 == 0 %>
      <div class="photos_row">
    <% end %>
    <span class="photo_thumbnail">
      <a href="<%= request.url + photo.tag %>">
        <img src="<%= photo.url_thumbnail %>">
      </a>
    </span>
    <% if index % 6 == 5 %>
      </div>
    <% end %>
  <% end %>
</div>